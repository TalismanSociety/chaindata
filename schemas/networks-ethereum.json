{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "isTestnet": {
        "type": "boolean"
      },
      "isDefault": {
        "type": "boolean"
      },
      "forceScan": {
        "type": "boolean"
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "logo": {
        "type": "string",
        "minLength": 1
      },
      "nativeTokenId": {
        "type": "string",
        "minLength": 1
      },
      "nativeCurrency": {
        "type": "object",
        "properties": {
          "decimals": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4294967295
          },
          "symbol": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "coingeckoId": {
            "type": "string"
          },
          "mirrorOf": {
            "type": "string"
          },
          "logo": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "themeColor": {
        "type": "string",
        "minLength": 1
      },
      "blockExplorerUrls": {
        "default": [],
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "platform": {
        "type": "string",
        "const": "ethereum"
      },
      "substrateChainId": {
        "type": "string"
      },
      "preserveGasEstimate": {
        "type": "boolean"
      },
      "rpcs": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "feeType": {
        "type": "string",
        "enum": ["legacy", "eip-1559"]
      },
      "l2FeeType": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "op-stack"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "scroll"
              },
              "l1GasPriceOracle": {
                "type": "string",
                "pattern": "^0x[a-fA-F0-9]{40}$"
              }
            },
            "required": ["type", "l1GasPriceOracle"],
            "additionalProperties": false
          }
        ]
      },
      "contracts": {
        "type": "object",
        "propertyNames": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["Erc20Aggregator", "Multicall3"]
            },
            {
              "not": {}
            }
          ]
        },
        "additionalProperties": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$"
        }
      },
      "balancesConfig": {
        "type": "object",
        "properties": {
          "evm-native": {
            "type": "null"
          },
          "evm-erc20": {
            "type": "null"
          },
          "evm-uniswapv2": {
            "type": "null"
          }
        },
        "additionalProperties": false
      },
      "tokens": {
        "type": "object",
        "properties": {
          "evm-erc20": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "contractAddress": {
                  "type": "string",
                  "pattern": "^0x[a-fA-F0-9]{40}$"
                },
                "networkId": {
                  "type": "string"
                },
                "isDefault": {
                  "type": "boolean"
                },
                "decimals": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9007199254740991
                },
                "symbol": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string"
                },
                "logo": {
                  "type": "string"
                },
                "coingeckoId": {
                  "type": "string"
                },
                "noDiscovery": {
                  "type": "boolean"
                },
                "mirrorOf": {
                  "type": "string"
                }
              },
              "required": ["contractAddress"],
              "additionalProperties": false
            }
          },
          "evm-uniswapv2": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "contractAddress": {
                  "type": "string",
                  "pattern": "^0x[a-fA-F0-9]{40}$"
                },
                "networkId": {
                  "type": "string"
                },
                "isDefault": {
                  "type": "boolean"
                },
                "decimals": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9007199254740991
                },
                "symbol": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string"
                },
                "logo": {
                  "type": "string"
                },
                "coingeckoId": {
                  "type": "string"
                },
                "noDiscovery": {
                  "type": "boolean"
                },
                "mirrorOf": {
                  "type": "string"
                },
                "symbol0": {
                  "type": "string",
                  "minLength": 1
                },
                "symbol1": {
                  "type": "string",
                  "minLength": 1
                },
                "decimals0": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9007199254740991
                },
                "decimals1": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9007199254740991
                },
                "tokenAddress0": {
                  "type": "string",
                  "pattern": "^0x[a-fA-F0-9]{40}$"
                },
                "tokenAddress1": {
                  "type": "string",
                  "pattern": "^0x[a-fA-F0-9]{40}$"
                },
                "coingeckoId0": {
                  "type": "string"
                },
                "coingeckoId1": {
                  "type": "string"
                }
              },
              "required": ["contractAddress"],
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "required": ["id", "rpcs"],
    "additionalProperties": false
  }
}
