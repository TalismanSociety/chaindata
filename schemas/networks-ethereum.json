{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "isTestnet": {
        "type": "boolean"
      },
      "isDefault": {
        "type": "boolean"
      },
      "forceScan": {
        "type": "boolean"
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "logo": {
        "type": "string",
        "minLength": 1
      },
      "nativeTokenId": {
        "type": "string",
        "minLength": 1
      },
      "nativeCurrency": {
        "type": "object",
        "properties": {
          "decimals": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4294967295
          },
          "symbol": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "coingeckoId": {
            "type": "string"
          },
          "mirrorOf": {
            "type": "string"
          },
          "logo": {
            "type": "string"
          }
        },
        "required": ["decimals", "symbol", "name"],
        "additionalProperties": false
      },
      "themeColor": {
        "type": "string",
        "minLength": 1
      },
      "blockExplorerUrls": {
        "default": [],
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "platform": {
        "type": "string",
        "const": "ethereum"
      },
      "substrateChainId": {
        "type": "string"
      },
      "preserveGasEstimate": {
        "type": "boolean"
      },
      "rpcs": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "feeType": {
        "type": "string",
        "enum": ["legacy", "eip-1559"]
      },
      "l2FeeType": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "op-stack"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "scroll"
              },
              "l1GasPriceOracle": {
                "type": "string",
                "pattern": "^0x[a-fA-F0-9]{40}$"
              }
            },
            "required": ["type", "l1GasPriceOracle"],
            "additionalProperties": false
          }
        ]
      },
      "contracts": {
        "type": "object",
        "propertyNames": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["Erc20Aggregator", "Multicall3"]
            },
            {
              "not": {}
            }
          ]
        },
        "additionalProperties": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$"
        }
      },
      "balancesConfig": {
        "type": "object",
        "propertyNames": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["evm-erc20", "evm-uniswapv2"]
            },
            {
              "not": {}
            }
          ]
        },
        "additionalProperties": {}
      }
    },
    "required": ["id", "rpcs"],
    "additionalProperties": false
  }
}
