{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "isTestnet": {
        "type": "boolean"
      },
      "isDefault": {
        "type": "boolean"
      },
      "forceScan": {
        "type": "boolean"
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "logo": {
        "type": "string",
        "minLength": 1
      },
      "nativeTokenId": {
        "type": "string",
        "minLength": 1
      },
      "nativeCurrency": {
        "type": "object",
        "properties": {
          "decimals": {
            "type": "integer",
            "minimum": 0,
            "maximum": 4294967295
          },
          "symbol": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "coingeckoId": {
            "type": "string"
          },
          "mirrorOf": {
            "type": "string"
          },
          "logo": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "themeColor": {
        "type": "string",
        "minLength": 1
      },
      "blockExplorerUrls": {
        "default": [],
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "platform": {
        "type": "string",
        "const": "solana"
      },
      "genesisHash": {
        "type": "string"
      },
      "rpcs": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "balancesConfig": {
        "type": "object",
        "properties": {
          "sol-native": {
            "type": "null"
          },
          "sol-spl": {
            "type": "null"
          }
        },
        "additionalProperties": false
      },
      "tokens": {
        "type": "object",
        "properties": {
          "sol-spl": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "mintAddress": {
                  "type": "string",
                  "pattern": "^[1-9A-HJ-NP-Za-km-z]{32,44}$"
                },
                "networkId": {
                  "type": "string"
                },
                "isDefault": {
                  "type": "boolean"
                },
                "decimals": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9007199254740991
                },
                "symbol": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string"
                },
                "logo": {
                  "type": "string"
                },
                "coingeckoId": {
                  "type": "string"
                },
                "noDiscovery": {
                  "type": "boolean"
                },
                "mirrorOf": {
                  "type": "string"
                }
              },
              "required": ["mintAddress"],
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "required": ["id", "rpcs"],
    "additionalProperties": false
  }
}
