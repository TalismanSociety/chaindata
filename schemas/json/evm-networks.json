{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "logo": { "type": "string" },
      "isTestnet": { "type": "boolean" },
      "isDefault": { "type": "boolean" },
      "feeType": { "enum": ["legacy", "eip-1559"] },
      "l2FeeType": {
        "type": "object",
        "properties": {
          "type": { "enum": ["op-stack", "scroll"] },
          "l1GasPriceOracle": { "type": "string" }
        }
      },
      "erc20aggregator": { "type": "string" },
      "explorerUrl": { "type": "string", "pattern": "^https://" },
      "rpcs": {
        "type": "array",
        "items": { "type": "string", "pattern": "^https://" }
      },
      "balancesConfig": {
        "type": "object",
        "properties": {
          "evm-native": {
            "type": "object",
            "properties": {
              "disable": { "type": "boolean" },
              "symbol": { "type": "string" },
              "decimals": { "type": "integer" },
              "ed": { "type": "string", "pattern": "[0-9]" },
              "coingeckoId": { "type": ["string", "null"] },
              "mirrorOf": { "type": "string" },
              "dcentName": { "type": "string" },
              "themeColor": { "type": "string" },
              "noDiscovery": { "type": "boolean" }
            },
            "additionalProperties": false
          },
          "evm-erc20": {
            "type": "object",
            "properties": {
              "tokens": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "contractAddress": {
                      "type": "string",
                      "pattern": "^0x[0-9a-fA-F]{40}$"
                    },
                    "coingeckoId": { "type": "string" },
                    "logo": { "type": "string" },
                    "mirrorOf": { "type": "string" },
                    "isDefault": { "type": "boolean" },
                    "noDiscovery": { "type": "boolean" }
                  },
                  "required": ["symbol", "contractAddress"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["tokens"],
            "additionalProperties": false
          },
          "evm-uniswapv2": {
            "type": "object",
            "properties": {
              "pools": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "contractAddress": {
                      "type": "string",
                      "pattern": "^0x[0-9a-fA-F]{40}$"
                    },
                    "logo": { "type": "string" },
                    "isDefault": { "type": "boolean" },
                    "noDiscovery": { "type": "boolean" }
                  },
                  "required": ["contractAddress"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["pools"],
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "substrateChainId": { "type": "string" }
    },
    "additionalProperties": false,
    "oneOf": [{ "required": ["name"] }, { "required": ["substrateChainId"] }]
  }
}
