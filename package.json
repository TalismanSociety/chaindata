{
  "name": "@talismn/chaindata",
  "version": "0.0.1",
  "type": "module",
  "description": "A community controlled index of relay/parachain assets to suppliment on-chain data, allowing developers to easily leverage the latest parachain information when building within the polkadot ecosystem.",
  "repository": "https://github.com/TalismanSociety/chaindata.git",
  "author": "Talisman Devs <devs@talisman.community>",
  "keywords": [],
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/TalismanSociety/chaindata/issues"
  },
  "homepage": "https://talisman.community",
  "packageManager": "pnpm@8",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "validate-json": "prettier --write *.json",
    "validate-schema-chains": "ajv --spec=draft2020 --allow-union-types -s schemas/json/chaindata.json -d chaindata.json -d testnets-chaindata.json",
    "validate-schema-evm-networks": "ajv --spec=draft2020 --allow-union-types -s schemas/json/evm-networks.json -d evm-networks.json",
    "validate-schema-tokens-buyable": "ajv --spec=draft2020 --allow-union-types -s schemas/json/ids.json -d tokens-buyable.json",
    "validate-schema": "pnpm run validate-schema-chains && pnpm run validate-schema-evm-networks && pnpm run validate-schema-tokens-buyable",
    "validate": "pnpm run validate-json && pnpm run validate-schema",
    "update-pjs": "pnpm update -L '@polkadot/*'",
    "import-pjs-config": "node scripts/import-pjs-config.js",
    "update": "pnpm run update-pjs && pnpm run import-pjs-config",
    "typecheck": "tsc --noEmit",
    "fetch-external": "tsx scripts/fetch-external.ts",
    "build": "tsx scripts/build.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@polkadot/api": "^10.9.1",
    "@polkadot/types": "^10.9.1",
    "@supercharge/promise-pool": "^3.1.0",
    "@talismn/chaindata-provider": "0.0.0-pr1088-20230922075915",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "extract-colors": "^2.0.6",
    "lodash": "^4.17.21",
    "sharp": "^0.32.6",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@polkadot/apps-config": "^0.132.1",
    "@polkadot/networks": "^12.5.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^20.7.0",
    "@types/tinycolor2": "^1.4.3",
    "ajv-cli": "^5.0.0",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "tsx": "^3.13.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "importSort": {
    ".ts": {
      "style": "module"
    },
    ".tsx": {
      "style": "module"
    },
    ".js": {
      "style": "module"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-import-sort"
    ]
  }
}
